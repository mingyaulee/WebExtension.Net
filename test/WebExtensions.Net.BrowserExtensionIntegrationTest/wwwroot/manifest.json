{
  "manifest_version": 3,
  "name": "WebExtensions.Net Integration Test",
  "description": "A browser extension for integration test of WebExtensions.Net",
  "version": "1.0",
  "background": {
    "service_worker": "BackgroundWorker.js",
    "type": "module"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "framework/*",
        "content/*",
        "app.js"
      ],
      "matches": [ "<all_urls>" ]
    }
  ],
  // used in CommandsApiTests
  "commands": {
    "dummy-command": {
      "suggested_key": "Ctrl+Shift+Y",
      "description": "This is a dummy command"
    }
  },
  // used in I18nApiTests
  "default_locale": "en",
  "permissions": [
    "alarms",
    "bookmarks",
    "cookies",
    "downloads",
    "history",
    "identity",
    "idle",
    "management",
    "notifications",
    "privacy",
    "storage",
    "tabs",
    "windows"
  ],
  "host_permissions": [
    // used in CookiesApiTests
    "https://*.non-existent-domain.com/"
  ]
}